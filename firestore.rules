rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to incidents and their comments
    match /incidents/{incidentId} {
      allow read, write: if true; // In a real app, you'd restrict this

      match /comments/{commentId} {
        allow read, write: if true;
      }
    }
    
    // Allow public write access for submitting police alerts
    match /policeAlerts/{alertId} {
      allow write: if true; // In a real app, you'd restrict this
    }
  }
}
